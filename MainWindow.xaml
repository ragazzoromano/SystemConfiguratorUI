<Window x:Class="SystemConfiguratorUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:SystemConfiguratorUI.ViewModels"
        mc:Ignorable="d"
        Title="{Binding WindowTitle}" Height="720" Width="1100">
    <Window.DataContext>
        <vm:MainViewModel />
    </Window.DataContext>
    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
    </Window.Resources>
    <Window.InputBindings>
        <KeyBinding Gesture="Ctrl+O" Command="{Binding OpenCommand}" />
        <KeyBinding Gesture="Ctrl+S" Command="{Binding SaveCommand}" />
        <KeyBinding Gesture="Ctrl+F" Command="{Binding FindNextCommand}" />
    </Window.InputBindings>
    <DockPanel>
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="_File">
                <MenuItem Header="_Open..." Command="{Binding OpenCommand}" />
                <MenuItem Header="_Save" Command="{Binding SaveCommand}" />
                <MenuItem Header="Save _As..." Command="{Binding SaveAsCommand}" />
                <Separator />
                <MenuItem Header="E_xit" Command="{Binding ExitCommand}" />
            </MenuItem>
        </Menu>

        <ToolBarTray DockPanel.Dock="Top">
            <ToolBar>
                <Button Content="Open" Command="{Binding OpenCommand}" />
                <Button Content="Save" Command="{Binding SaveCommand}" />
                <Button Content="Save As" Command="{Binding SaveAsCommand}" />
                <Separator />
                <TextBlock Text="Search:" VerticalAlignment="Center" Margin="8,0,4,0" />
                <TextBox Width="180" Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}" />
                <Button Content="Find Prev" Command="{Binding FindPreviousCommand}" Margin="4,0,0,0" />
                <Button Content="Find Next" Command="{Binding FindNextCommand}" Margin="2,0,0,0" />
                <TextBlock Text="{Binding SearchStatus}" Margin="6,0,0,0" VerticalAlignment="Center" />
                <Separator />
                <TextBlock Text="Replace:" VerticalAlignment="Center" Margin="6,0,4,0" />
                <TextBox Width="140" Text="{Binding ReplaceText, UpdateSourceTrigger=PropertyChanged}" />
                <CheckBox Content="Match case" Margin="4,0" IsChecked="{Binding MatchCase}" />
                <Button Content="Replace" Command="{Binding ReplaceCommand}" />
                <Button Content="Replace All" Command="{Binding ReplaceAllCommand}" />
            </ToolBar>
        </ToolBarTray>

        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*" />
                <ColumnDefinition Width="3*" />
            </Grid.ColumnDefinitions>

            <Border BorderBrush="LightGray" BorderThickness="0,0,1,0" Padding="4">
                <TreeView x:Name="JsonTree" ItemsSource="{Binding RootNodes}" SelectedItemChanged="TreeView_SelectedItemChanged">
                    <TreeView.ItemContainerStyle>
                        <Style TargetType="TreeViewItem">
                            <Setter Property="IsExpanded" Value="{Binding IsExpanded, Mode=TwoWay}" />
                            <Setter Property="IsSelected" Value="{Binding IsSelected, Mode=TwoWay}" />
                        </Style>
                    </TreeView.ItemContainerStyle>
                    <TreeView.Resources>
                        <HierarchicalDataTemplate DataType="{x:Type vm:JsonTreeNodeViewModel}" ItemsSource="{Binding Children}">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="{Binding DisplayName}" />
                                <TextBlock Text=": " />
                                <TextBlock Text="{Binding DisplayValue}" Foreground="Gray" />
                            </StackPanel>
                        </HierarchicalDataTemplate>
                    </TreeView.Resources>
                </TreeView>
            </Border>

            <TabControl Grid.Column="1">
                <TabItem Header="Property Editor">
                    <Grid Margin="8" RowDefinitions="Auto,Auto,Auto,Auto,*" RowSpacing="8">
                        <Grid.Resources>
                            <Style TargetType="TextBox">
                                <Setter Property="VerticalAlignment" Value="Center" />
                            </Style>
                        </Grid.Resources>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>

                        <TextBlock Text="Name:" FontWeight="SemiBold" Margin="0,0,6,0" />
                        <TextBox Grid.Column="1" Text="{Binding SelectedNode.Name, Mode=OneWay}" IsReadOnly="True" />

                        <TextBlock Grid.Row="1" Text="Type:" FontWeight="SemiBold" Margin="0,0,6,0" />
                        <TextBox Grid.Row="1" Grid.Column="1" Text="{Binding SelectedNode.NodeType}" IsReadOnly="True" />

                        <TextBlock Grid.Row="2" Text="Value:" FontWeight="SemiBold" Margin="0,0,6,0" />
                        <StackPanel Grid.Row="2" Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                            <TextBox Width="260" Text="{Binding SelectedNode.EditableValue, UpdateSourceTrigger=PropertyChanged}">
                                <TextBox.Style>
                                    <Style TargetType="TextBox">
                                        <Setter Property="Visibility" Value="Visible" />
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding SelectedNode.IsBoolean}" Value="True">
                                                <Setter Property="Visibility" Value="Collapsed" />
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBox.Style>
                            </TextBox>
                            <CheckBox Content="True/False" IsChecked="{Binding SelectedNode.BooleanValue, Mode=TwoWay}">
                                <CheckBox.Style>
                                    <Style TargetType="CheckBox">
                                        <Setter Property="Visibility" Value="Collapsed" />
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding SelectedNode.IsBoolean}" Value="True">
                                                <Setter Property="Visibility" Value="Visible" />
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </CheckBox.Style>
                            </CheckBox>
                        </StackPanel>

                        <TextBlock Grid.Row="3" Text="Editable:" FontWeight="SemiBold" Margin="0,0,6,0" />
                        <TextBlock Grid.Row="3" Grid.Column="1" Text="{Binding SelectedNode.IsPrimitive}" />
                    </Grid>
                </TabItem>
                <TabItem Header="Raw JSON">
                    <DockPanel>
                        <StackPanel Orientation="Horizontal" DockPanel.Dock="Top" Margin="8" HorizontalAlignment="Right" >
                            <Button Content="Format" Command="{Binding FormatJsonCommand}" Margin="0,0,4,0" />
                            <Button Content="Validate" Command="{Binding ValidateJsonCommand}" />
                        </StackPanel>
                        <TextBox Text="{Binding RawJsonText, UpdateSourceTrigger=PropertyChanged}" AcceptsReturn="True" AcceptsTab="True" VerticalScrollBarVisibility="Visible" HorizontalScrollBarVisibility="Auto" FontFamily="Consolas" FontSize="13" TextWrapping="NoWrap" />
                    </DockPanel>
                </TabItem>
            </TabControl>
        </Grid>
    </DockPanel>
</Window>
