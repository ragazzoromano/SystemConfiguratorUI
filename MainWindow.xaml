<Window
    x:Class="SystemConfiguratorUI.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="clr-namespace:SystemConfiguratorUI.ViewModels"
    Title="{Binding WindowTitle}"
    Width="1100"
    Height="720"
    mc:Ignorable="d">
    <Window.DataContext>
        <vm:MainViewModel />
    </Window.DataContext>
    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
    </Window.Resources>
    <Window.InputBindings>
        <KeyBinding Command="{Binding OpenCommand}" Gesture="Ctrl+O" />
        <KeyBinding Command="{Binding SaveCommand}" Gesture="Ctrl+S" />
        <KeyBinding Command="{Binding FindNextCommand}" Gesture="Ctrl+F" />
    </Window.InputBindings>
    <DockPanel>
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="_File">
                <MenuItem Command="{Binding OpenCommand}" Header="_Open..." />
                <MenuItem Command="{Binding SaveCommand}" Header="_Save" />
                <MenuItem Command="{Binding SaveAsCommand}" Header="Save _As..." />
                <Separator />
                <MenuItem Command="{Binding ExitCommand}" Header="E_xit" />
            </MenuItem>
        </Menu>

        <ToolBarTray DockPanel.Dock="Top">
            <ToolBar>
                <Button Command="{Binding OpenCommand}" Content="Open" />
                <Button Command="{Binding SaveCommand}" Content="Save" />
                <Button Command="{Binding SaveAsCommand}" Content="Save As" />
                <Separator />
                <TextBlock
                    Margin="8,0,4,0"
                    VerticalAlignment="Center"
                    Text="Search:" />
                <TextBox Width="180" Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}" />
                <Button
                    Margin="4,0,0,0"
                    Command="{Binding FindPreviousCommand}"
                    Content="Find Prev" />
                <Button
                    Margin="2,0,0,0"
                    Command="{Binding FindNextCommand}"
                    Content="Find Next" />
                <TextBlock
                    Margin="6,0,0,0"
                    VerticalAlignment="Center"
                    Text="{Binding SearchStatus}" />
                <Separator />
                <TextBlock
                    Margin="6,0,4,0"
                    VerticalAlignment="Center"
                    Text="Replace:" />
                <TextBox Width="140" Text="{Binding ReplaceText, UpdateSourceTrigger=PropertyChanged}" />
                <CheckBox
                    Margin="4,0"
                    Content="Match case"
                    IsChecked="{Binding MatchCase}" />
                <Button Command="{Binding ReplaceCommand}" Content="Replace" />
                <Button Command="{Binding ReplaceAllCommand}" Content="Replace All" />
            </ToolBar>
        </ToolBarTray>

        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*" />
                <ColumnDefinition Width="3*" />
            </Grid.ColumnDefinitions>

            <Border
                Padding="4"
                BorderBrush="LightGray"
                BorderThickness="0,0,1,0">
                <TreeView
                    x:Name="JsonTree"
                    ItemsSource="{Binding RootNodes}"
                    SelectedItemChanged="TreeView_SelectedItemChanged">
                    <TreeView.ItemContainerStyle>
                        <Style TargetType="TreeViewItem">
                            <Setter Property="IsExpanded" Value="{Binding IsExpanded, Mode=TwoWay}" />
                            <Setter Property="IsSelected" Value="{Binding IsSelected, Mode=TwoWay}" />
                        </Style>
                    </TreeView.ItemContainerStyle>
                    <TreeView.Resources>
                        <HierarchicalDataTemplate DataType="{x:Type vm:JsonTreeNodeViewModel}" ItemsSource="{Binding Children}">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="{Binding DisplayName}" />
                                <TextBlock Text=": " />
                                <TextBlock Foreground="Gray" Text="{Binding DisplayValue}" />
                            </StackPanel>
                        </HierarchicalDataTemplate>
                    </TreeView.Resources>
                </TreeView>
            </Border>

            <TabControl Grid.Column="1">
                <TabItem Header="Property Editor">
                    <Grid Margin="8" RowDefinitions="Auto,Auto,Auto,Auto,*">
                        <Grid.Resources>
                            <Style TargetType="TextBox">
                                <Setter Property="VerticalAlignment" Value="Center" />
                            </Style>
                        </Grid.Resources>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>

                        <TextBlock
                            Margin="5"
                            FontWeight="SemiBold"
                            Text="Name:" />
                        <TextBox
                            Grid.Column="1"
                            IsReadOnly="True"
                            Text="{Binding SelectedNode.Name, Mode=OneWay}" />

                        <TextBlock
                            Grid.Row="1"
                            Margin="5"
                            FontWeight="SemiBold"
                            Text="Type:" />
                        <TextBox
                            Grid.Row="1"
                            Grid.Column="1"
                            IsReadOnly="True"
                            Text="{Binding SelectedNode.NodeType}" />

                        <TextBlock
                            Grid.Row="2"
                            Margin="5"
                            FontWeight="SemiBold"
                            Text="Value:" />
                        <StackPanel
                            Grid.Row="2"
                            Grid.Column="1"
                            VerticalAlignment="Center"
                            Orientation="Horizontal">
                            <TextBox Width="260" Text="{Binding SelectedNode.EditableValue, UpdateSourceTrigger=PropertyChanged}">
                                <TextBox.Style>
                                    <Style TargetType="TextBox">
                                        <Setter Property="Visibility" Value="Visible" />
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding SelectedNode.IsBoolean}" Value="True">
                                                <Setter Property="Visibility" Value="Collapsed" />
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBox.Style>
                            </TextBox>
                            <CheckBox Content="True/False" IsChecked="{Binding SelectedNode.BooleanValue, Mode=TwoWay}">
                                <CheckBox.Style>
                                    <Style TargetType="CheckBox">
                                        <Setter Property="Visibility" Value="Collapsed" />
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding SelectedNode.IsBoolean}" Value="True">
                                                <Setter Property="Visibility" Value="Visible" />
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </CheckBox.Style>
                            </CheckBox>
                        </StackPanel>

                        <TextBlock
                            Grid.Row="3"
                            Margin="5"
                            FontWeight="SemiBold"
                            Text="Editable:" />
                        <TextBlock
                            Grid.Row="3"
                            Grid.Column="1"
                            Text="{Binding SelectedNode.IsPrimitive}" />
                    </Grid>
                </TabItem>
                <TabItem Header="Raw JSON">
                    <DockPanel>
                        <StackPanel
                            Margin="8"
                            HorizontalAlignment="Right"
                            DockPanel.Dock="Top"
                            Orientation="Horizontal">
                            <Button
                                Margin="0,0,4,0"
                                Command="{Binding FormatJsonCommand}"
                                Content="Format" />
                            <Button Command="{Binding ValidateJsonCommand}" Content="Validate" />
                        </StackPanel>
                        <TextBox
                            AcceptsReturn="True"
                            AcceptsTab="True"
                            FontFamily="Consolas"
                            FontSize="13"
                            HorizontalScrollBarVisibility="Auto"
                            Text="{Binding RawJsonText, UpdateSourceTrigger=PropertyChanged}"
                            TextWrapping="NoWrap"
                            VerticalScrollBarVisibility="Visible" />
                    </DockPanel>
                </TabItem>
            </TabControl>
        </Grid>
    </DockPanel>
</Window>
